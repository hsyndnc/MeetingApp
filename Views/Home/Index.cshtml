@model MeetingInfo 
@* //@using MeetingApp.Models 'u viewImport dosyasına eklersek her sayfada bunu eklememize gerek kalmaz *@
@{
    Layout = "_Layout2";
}
@* Bu sayede Home/indexte layout 2 kullanmıs oluyourz, eğer layuot2 yerine null dersek bu sefer layout gelmemiş olur. *@
<main class="text-center">
    <h1 class="h4">@ViewBag.Selamlama , @ViewBag.UserName</h1>
    <p>Toplantı katılım durumunuzu bildirin</p>

    <div class="card my-2">
        <ul class="list-group list-group-flush">
            <li class="list-group-item">@Model.Location</li>
            <li class="list-group-item">@Model.Date.ToString("dd/MM/yyyy HH:mm:ss") tarihinde gerçekleşecek</li>
            <li class="list-group-item">@Model.Location</li>
            <li class="list-group-item">@Model.NumberOfPeople</li>
        </ul>
    </div>


    <a class="btn btn-sm btn-outline-primary" href="/meeting/apply">Başvuru Yap</a>


</main>
