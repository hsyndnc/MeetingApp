@model UserInfo
@{
    ViewBag.Title = "Başvuru Durumu";
}
<main class="text-center">
    <h1 class="h4">Başvuru Durumu</h1>
    
    
    @if (Model.WillAttend ==true )
    {
        
        <p>Teşekkürler @Model.Name sizinle birlikte toplantıya  @ViewBag.UserCount kişi katılıyor</p>
        <a class="btn btn-sm btn-outline-primary" asp-contoller="Meeting" asp-action="list"> Katılımcıları Listele</a>
    }
    else
    {
        <p>@Model.Name, katılmadığınıuzdan dolayı üzgünüz .</p>
        <a class="btn btn-sm btn-outline-primary" asp-contoller="Meeting" asp-action="apply"> Katılımcıları Listele</a>
    }

    


</main>

